{
  "name": "@halvaradop/ui",
  "version": "0.1.0",
  "private": true,
  "description": "A comprehensive UI library for React, built with Tailwind CSS and CVA (Class Variance Authority). It provides reusable components and supports JSX syntax.",
  "scripts": {
    "format": "npx prettier --write .",
    "format:check": "npx prettier --check ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/halvaradop/ui.git"
  },
  "keywords": [
    "ui",
    "components",
    "react",
    "jsx",
    "reusable",
    "ui",
    "library",
    "ui",
    "components",
    "tailwindcss",
    "react",
    "cva",
    "class-variance-authority"
  ],
  "author": "Hernan Alvarado <hernanvid123@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/halvaradop/ui/issues"
  },
  "homepage": "https://github.com/halvaradop/ui#readme",
  "devDependencies": {
    "@halvaradop/tailwindcss-utilities": "^0.2.2",
    "@types/node": "^22.5.4",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.45",
    "prettier": "^3.3.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.11",
    "typescript": "^5.6.2"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "prettier": {
    "semi": false,
    "jsxSingleQuote": false,
    "singleQuote": false,
    "printWidth": 130,
    "tabWidth": 4,
    "useTabs": true,
    "trailingComma": "es5",
    "overrides": [
      {
        "files": [
          "*.json",
          "README.md"
        ],
        "options": {
          "tabWidth": 2,
          "useTabs": false
        }
      }
    ]
  }
}
