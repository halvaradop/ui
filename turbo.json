{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist"],
      "inputs": ["src"],
      "cache": true
    },
    "build:release": {
      "dependsOn": ["^build:release"],
      "cache": false
    },
    "dev": {
      "dependsOn": ["^dev"],
      "outputs": ["dist"],
      "inputs": ["src"],
      "cache": false,
      "persistent": false
    },
    "clean": {
      "cache": false,
      "inputs": ["dist", "node_modules"]
    },
    "clean:dist": {
      "cache": false
    },
    "clean:modules": {
      "cache": false
    },
    "clean:turbo": {
      "cache": false
    }
  },
  "ui": "tui",
  "cacheDir": ".turbo/cache",
  "globalDependencies": ["tsconfig.json"]
}
