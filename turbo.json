{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["tsconfig.json"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**/*"],
      "inputs": ["packages/**/src/**"],
      "cache": true
    },
    "dev": {
      "cache": false
    }
  },
  "cacheDir": ".turbo/cache"
}
