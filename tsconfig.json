{
  "compilerOptions": {
    "lib": ["ES2022", "DOM"],
    "target": "ES2022",
    "declaration": true,
    "jsx": "preserve",
    "module": "Node16",
    "outDir": "dist",
    "moduleResolution": "Node16",
    "moduleDetection": "force",
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules"],
  "include": ["vite.config.ts"]
}
